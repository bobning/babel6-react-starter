{
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaFeatures": {
            "experimentalObjectRestSpread": true,
            "jsx": true
        },
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "indent": [ 2, 2, { "SwitchCase": 1 } ],
        "linebreak-style": 0,
        "quotes": [ 2, "single", "avoid-escape" ],
        "semi": 2,
        "no-console": 0,
        "react/jsx-uses-vars": 1
    }
}
